{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "python serve",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "http.server",
                "8080"
            ],
            "osx": {
                "command": "python3",
                "args": [
                    "-m",
                    "http.server",
                    "8080"
                ]
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^Serving*"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Serving*",
                    "endsPattern": ":8080"
                }
            }
        },
        {
            "label": "validate",
            "detail": "openapiファイルのバリデーション",
            "command": "openapi-generator",
            "windows": {
                "command": "java",
                "args": [
                    "-jar",
                    "openapi-generator-cli.jar",
                    "validate",
                    "-i",
                    "root.yaml"
                ]
            },
            "type": "shell",
            "group": "test",
            "args": [
                "validate",
                "-i",
                "root.yaml",
            ],
            "dependsOn": [
                "bundle"
            ]
        },
        {
            "label": "bundle",
            "detail": "openapiファイルを1ファイルに固める",
            "command": "redocly",
            "type": "shell",
            "group": "build",
            "args": [
                "bundle",
                "openapi.v1.yaml",
                "--output",
                "root.yaml"
            ]
        },
        {
            "label": "delete generated - server",
            "detail": "自動生成されたフォルダを削除",
            "command": "rm",
            "windows": {
                "command": "powershell",
                "args": [
                    "-NoProfile",
                    "-Command",
                    "Remove-Item -Recurse -Force -ErrorAction SilentlyContinue ./generated-server"
                ]
            },
            "type": "shell",
            "group": "build",
            "args": [
                "-rf",
                "./generated-server"
            ]
        },
        {
            "label": "generate - server",
            "detail": "aspnetcoreのコードを自動生成",
            "command": "openapi-generator",
            "windows": {
                "command": "java",
                "args": [
                    "-jar",
                    "openapi-generator-cli.jar",
                    "generate",
                    "-i",
                    "root.yaml",
                    "-g",
                    "aspnetcore",
                    "-o",
                    "generated-server",
                    "-c",
                    "./server.config.json",
                    "--model-name-suffix",
                    "Model"
                ]
            },
            "type": "shell",
            "group": "build",
            "args": [
                "generate",
                "-i",
                "root.yaml",
                "-g",
                "aspnetcore",
                "-o",
                "generated-server",
                "-c",
                "./server.config.json",
                "--model-name-suffix",
                "Model"
            ],
            "dependsOn": [
                "delete generated - server",
                "bundle"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "delete generated - client",
            "detail": "フロントエンドの自動生成フォルダを削除",
            "command": "rm",
            "windows": {
                "command": "powershell",
                "args": [
                    "-NoProfile",
                    "-Command",
                    "Remove-Item -Recurse -Force -ErrorAction SilentlyContinue ./generated-client-typescript"
                ]
            },
            "type": "shell",
            "group": "build",
            "args": [
                "-rf",
                "./generated-client-typescript"
            ]
        },
        {
            "label": "generate - client:typescript",
            "detail": "フロントエンドのコード自動生成",
            "command": "openapi-generator",
            "type": "shell",
            "group": "build",
            "args": [
                "generate",
                "-i",
                "root.yaml",
                "-g",
                "typescript-fetch",
                "-o",
                "generated-client-typescript",
                "-c",
                "typescript.config.json",
                "--git-user-id=GTech9971",
                "--git-repo-id=arsenals-api-def",
                "--additional-properties=npmVersion=1.0.0"
            ],
            "dependsOn": [
                "delete generated - client",
                "bundle"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "prepare package - client:typescript",
            "detail": "npm用のpackage.jsonとtsconfig.jsonを生成",
            "command": "node",
            "type": "shell",
            "group": "build",
            "args": [
                "-e",
                "const fs=require(\"fs\");const path=require(\"path\");const dir=path.join(process.cwd(),\"generated-client-typescript\");if(!fs.existsSync(dir)){process.exit(0);}const pkg={name:\"cap-store-api-def\",version:\"0.0.0-local\",description:\"Auto-generated TypeScript client using fetch\",main:\"index.ts\",types:\"index.ts\",scripts:{build:\"npm run typecheck\",typecheck:\"tsc\",prepublishOnly:\"npm run build\"},keywords:[\"openapi\",\"typescript\",\"fetch\"],author:\"GTech9971\",license:\"MIT\",repository:{type:\"git\",url:\"https://github.com/GTech9971/CapStore-api-definition\"},devDependencies:{typescript:\"^5.4.0\"}};fs.writeFileSync(path.join(dir,\"package.json\"),JSON.stringify(pkg,null,2)+\"\\n\");const tsconfig={compilerOptions:{target:\"ES2020\",module:\"ESNext\",moduleResolution:\"Node\",declaration:true,outDir:\"dist\",strict:true,esModuleInterop:true,forceConsistentCasingInFileNames:true,skipLibCheck:true},include:[\"./**/*.ts\"],exclude:[\"node_modules\",\"dist\"]};fs.writeFileSync(path.join(dir,\"tsconfig.json\"),JSON.stringify(tsconfig,null,2)+\"\\n\");"
            ],
            "windows": {
                "command": "node",
                "args": [
                    "-e",
                    "const fs=require(\"fs\");const path=require(\"path\");const dir=path.join(process.cwd(),\"generated-client-typescript\");if(!fs.existsSync(dir)){process.exit(0);}const pkg={name:\"cap-store-api-def\",version:\"0.0.0-local\",description:\"Auto-generated TypeScript client using fetch\",main:\"index.ts\",types:\"index.ts\",scripts:{build:\"npm run typecheck\",typecheck:\"tsc\",prepublishOnly:\"npm run build\"},keywords:[\"openapi\",\"typescript\",\"fetch\"],author:\"GTech9971\",license:\"MIT\",repository:{type:\"git\",url:\"https://github.com/GTech9971/CapStore-api-definition\"},devDependencies:{typescript:\"^5.4.0\"}};fs.writeFileSync(path.join(dir,\"package.json\"),JSON.stringify(pkg,null,2)+\"\\n\");const tsconfig={compilerOptions:{target:\"ES2020\",module:\"ESNext\",moduleResolution:\"Node\",declaration:true,outDir:\"dist\",strict:true,esModuleInterop:true,forceConsistentCasingInFileNames:true,skipLibCheck:true},include:[\"./**/*.ts\"],exclude:[\"node_modules\",\"dist\"]};fs.writeFileSync(path.join(dir,\"tsconfig.json\"),JSON.stringify(tsconfig,null,2)+\"\\n\");"
                ]
            },
            "dependsOn": [
                "generate - client:typescript"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "install deps - client:typescript",
            "detail": "生成クライアントのnpm依存関係をインストール",
            "command": "npm",
            "type": "shell",
            "group": "build",
            "args": [
                "install",
                "--no-audit",
                "--no-fund"
            ],
            "options": {
                "cwd": "./generated-client-typescript"
            },
            "windows": {
                "command": "npm.cmd",
                "args": [
                    "install",
                    "--no-audit",
                    "--no-fund"
                ]
            },
            "dependsOn": [
                "prepare package - client:typescript"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "build - client:typescript",
            "type": "shell",
            "group": "build",
            "detail": "フロントエンドコードをビルドする",
            "command": "npm",
            "args": [
                "run",
                "build"
            ],
            "options": {
                "cwd": "./generated-client-typescript"
            },
            "windows": {
                "command": "npm.cmd",
                "args": [
                    "run",
                    "build"
                ]
            },
            "dependsOn": [
                "install deps - client:typescript"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "build - server",
            "type": "shell",
            "group": "build",
            "detail": "サーバーコードをビルドする",
            "command": "dotnet",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "./generated-server/src/CapStore.Models"
            },
            "dependsOn": [
                "generate - server"
            ]
        }
    ],
    "inputs": [
        {
            "id": "api",
            "description": "変換API",
            "type": "pickString",
            "options": [
                "parts-component",
            ]
        }
    ]
}
