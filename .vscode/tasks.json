{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "python serve",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "http.server",
                "8080"
            ],
            "osx": {
                "command": "python3",
                "args": [
                    "-m",
                    "http.server",
                    "8080"
                ]
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^Serving*"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Serving*",
                    "endsPattern": ":8080"
                }
            }
        },
        {
            "label": "validate",
            "detail": "openapiファイルのバリデーション",
            "command": "openapi-generator",
            "windows": {
                "command": "java",
                "args": [
                    "-jar",
                    "openapi-generator-cli.jar",
                    "validate",
                    "-i",
                    "root.yaml"
                ]
            },
            "type": "shell",
            "group": "test",
            "args": [
                "validate",
                "-i",
                "root.yaml",
            ],
            "dependsOn": [
                "bundle"
            ]
        },
        {
            "label": "bundle",
            "detail": "openapiファイルを1ファイルに固める",
            "command": "redocly",
            "type": "shell",
            "group": "build",
            "args": [
                "bundle",
                "openapi.v1.yaml",
                "--output",
                "root.yaml"
            ]
        },
        {
            "label": "delete generated - server",
            "detail": "自動生成されたフォルダを削除",
            "command": "rm",
            "windows": {
                "command": "powershell",
                "args": [
                    "-NoProfile",
                    "-Command",
                    "Remove-Item -Recurse -Force -ErrorAction SilentlyContinue ./generated-server"
                ]
            },
            "type": "shell",
            "group": "build",
            "args": [
                "-rf",
                "./generated-server"
            ]
        },
        {
            "label": "generate - server",
            "detail": "aspnetcoreのコードを自動生成",
            "command": "openapi-generator",
            "windows": {
                "command": "java",
                "args": [
                    "-jar",
                    "openapi-generator-cli.jar",
                    "generate",
                    "-i",
                    "root.yaml",
                    "-g",
                    "aspnetcore",
                    "-o",
                    "generated-server",
                    "-c",
                    "./server.config.json",
                    "--model-name-suffix",
                    "Model"
                ]
            },
            "type": "shell",
            "group": "build",
            "args": [
                "generate",
                "-i",
                "root.yaml",
                "-g",
                "aspnetcore",
                "-o",
                "generated-server",
                "-c",
                "./server.config.json",
                "--model-name-suffix",
                "Model"
            ],
            "dependsOn": [
                "delete generated - server",
                "bundle"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "generate - client:typescript",
            "detail": "フロントエンドのコード自動生成",
            "command": "openapi-generator",
            "type": "shell",
            "group": "build",
            "args": [
                "generate",
                "-i",
                "root.yaml",
                "-g",
                "typescript-fetch",
                "-o",
                "generated-client-typescript",
                "-c",
                "typescript.config.json",
                "--git-user-id=GTech9971",
                "--git-repo-id=arsenals-api-def",
                "--additional-properties=npmVersion=1.0.0"
            ],
            "dependsOn": [
                // "delete generated - client",
                "bundle",
            ]
        },
        {
            "label": "build - server",
            "type": "shell",
            "group": "build",
            "detail": "サーバーコードをビルドする",
            "command": "dotnet",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "./generated-server/src/CapStore.Models"
            },
            "dependsOn": [
                "generate - server"
            ]
        }
    ],
    "inputs": [
        {
            "id": "api",
            "description": "変換API",
            "type": "pickString",
            "options": [
                "parts-component",
            ]
        }
    ]
}
